<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/colorControlNormal</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Display over camera cutout -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ListText" parent="Widget.AppCompat.TextView">
        <!-- Global Text Color does not work for Switch -->
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:paddingTop">@dimen/half_view_padding</item>
        <item name="android:paddingBottom">@dimen/half_view_padding</item>
        <item name="android:textColorLink">?attr/colorControlNormal</item>
    </style>

</resources>
