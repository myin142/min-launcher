<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/screen_padding">

    <TextView android:text="@string/settings_edit_tools"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/title"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/actions"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:textSize="@dimen/title_size"/>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:id="@+id/actions"
                  app:layout_constraintTop_toBottomOf="@+id/title"
                  app:layout_constraintBottom_toTopOf="@+id/edit_tools_list"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="@dimen/view_padding"
                  android:layout_marginBottom="@dimen/view_padding" >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/add_phone"
                android:text="@string/settings_enable_phone"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_tools_list"
            app:layout_constraintTop_toBottomOf="@+id/actions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>
