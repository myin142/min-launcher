<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="32dp" app:srcCompat="@drawable/telephone" android:id="@+id/phone"
            android:layout_weight="1"/>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="32dp" app:srcCompat="@drawable/settings" android:id="@+id/settings"
            android:layout_weight="1"/>
</LinearLayout>
